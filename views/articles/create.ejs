<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header %>
</head>
<body>
<div class="container">
    <% include ../partials/navbar %>
    <hr>
    <div class="row">
        <div class="col-sm-12">
            <form action="/articles" method="post">
                <div class="form-group">
                    <label for="category">Article Name</label>
                    <input type="text" class="form-control" name="title" placeholder="Article name" required>
                </div>
                <div class="form-group">
                    <label for="category">Article Description</label>
                    <input type="text" class="form-control" name="description" placeholder="Article description" required>
                </div>
                <div class="form-group">
                    <label for="category">Categories</label>
                    <% for (var i = 0; i < categories.length; i++) { %>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="category" value="<%= categories[i]._id %>"> <%= categories[i].name %>
                            </label>
                        </div>
                    <% }%>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include ../partials/scripts %>
</body>
</html>
